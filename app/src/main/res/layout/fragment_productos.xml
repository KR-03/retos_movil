<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.productos.ProductosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--    Codigo Caja 1-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/caja"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/p1_caja_de_maquillaje" />

                    <LinearLayout
                        android:id="@+id/info_caja"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_NombreP1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:textSize="18dp"
                            android:text="CAJA DE MAQUILLAJE"

                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txt_telefonoP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telefono: 3227703426"
                            android:textColor="#434147" />

                        <TextView
                            android:id="@+id/text_precio_producto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Precio: $100.000 CO"
                            android:textColor="#434147" />
                    </LinearLayout>
                </LinearLayout>


            <!--    Codigo Caja 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/crema"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/p2_crema_facial" />

                <LinearLayout
                    android:id="@+id/info_crema"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreP2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="CREMA FACIAL"

                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoP2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_producto2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $40.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


            <!--    Codigo Caja 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kit"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/p3_kit_de_maquillaje" />

                <LinearLayout
                    android:id="@+id/info_kit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreP3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="KIT DE MAQUILLAJE"

                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoP3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_producto3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $200.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


            <!--    Codigo Caja 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/perfume"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/p4_perfume" />

                <LinearLayout
                    android:id="@+id/info_perfume"
