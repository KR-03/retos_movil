                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/txt_telefonoP6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telefono: 3227703426"
                            android:textColor="#434147" />

                        <TextView
                            android:id="@+id/text_precio_producto6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Precio: $28.000 CO"
                            android:textColor="#434147" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>