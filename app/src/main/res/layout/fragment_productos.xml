                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoP4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_producto4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $200.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


            <!--    Codigo Caja 5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/polvo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/p5_polvo_maquillaje" />

                <LinearLayout
                    android:id="@+id/info_polvo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreP5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="POLVO DE MAQUILLA"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoP5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_producto5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $50.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


                <!--    Codigo Caja 6-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/kit_b"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/p6_kit_basico" />

                    <LinearLayout
                        android:id="@+id/info_kit_b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_NombreP6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:textSize="18dp"
