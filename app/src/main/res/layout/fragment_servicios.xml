<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.productos.ProductosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--    Codigo Caja 1-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pintar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/s5_pintar" />

                <LinearLayout
                    android:id="@+id/info_pintar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreP1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="MANICURE"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $10.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


            <!--    Codigo Caja 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/crema"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/s1_facialmask" />

                <LinearLayout
                    android:id="@+id/info_facial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreS2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="MASCARA FACIAL"

                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoS2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_S2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $40.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


            <!--    Codigo Caja 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kit"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/s2_hair_salon" />

                <LinearLayout
                    android:id="@+id/info_hair"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreS3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="CORTE DE CABELLO"

                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoS3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_S3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $20.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


            <!--    Codigo Caja 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/maquillaje"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/s3_makeup" />

                <LinearLayout
                    android:id="@+id/info_perfume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreS4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="MAQUILLAJE"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoP4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_S4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $35.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>


            <!--    Codigo Caja 5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cejas"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/s4_cejas" />

                <LinearLayout
                    android:id="@+id/info_cejas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_NombreS5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:textSize="18dp"
                        android:text="ARREGLO DE CEJAS"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_telefonoS5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono: 3227703426"
                        android:textColor="#434147" />

                    <TextView
                        android:id="@+id/text_precio_S5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Precio: $15.000 CO"
                        android:textColor="#434147" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>